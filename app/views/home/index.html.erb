<div class="container">
  <div class="content">
    <h1> Opções</h1>
    <p class="navbar-text float-right">
      <% if user_signed_in? %>
        <div>
          <div class="title_index">
            <span>
              Logado como: <strong><%= current_user.email %></strong>.</br>
            </span>
            <span>
              saldo R$: <strong><%=current_user.amount%></strong>
            </span>
          </div>
          <div class="options">
            <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'btn btn-primary' %>
            <%= link_to "Depositar", transactions_deposit_index_path, :class => 'btn btn-primary' %>
            <%= link_to "Sacar", transactions_withdraw_index_path, :class => 'btn btn-primary' %>
            <%= link_to "Transferencia", transactions_transfer_index_path, :class => 'btn btn-primary' %>
            <%= link_to "Extrato", transactions_historic_index_path, :class => 'btn btn-primary' %>
          </div>
          <div class="buttons">
            <%= button_to 'Finalizar Conta', user_finished_account_path(current_user.id), method: :post, :class => 'btn btn-secondary' %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-danger' %>
          </div>
       </div>
    <% else %>
      <%= link_to "Registrar-se", new_user_registration_path, :class => 'navbar-link'  %>
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
  </p>
</div>
</div>
